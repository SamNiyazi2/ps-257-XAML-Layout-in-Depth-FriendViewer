<UserControl x:Class="FriendViewer.Controls.LoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FriendViewer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!--
            09/29/2020 04:15 pm - SSN - [20200929-1605] - [003] - M05-03 - FriendViewer: Loading overlay
    -->


    <Grid Background="#AAFFFFFF" >
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Loading data..." Margin="5" FontSize="20" Foreground="Black"/>
            <ProgressBar IsIndeterminate="True" Height="10" Margin="5" Foreground="Red" Background="Black" BorderThickness="0"/>
        </StackPanel>


    </Grid>
</UserControl>
